pipeline {
  agent any
  tools {
    maven 'Maven' 
       }
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean install -DskipTest'
      }
    }
    stage ('Deploy To Tomcat Server') {
      steps{
        script {
        deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://3.82.130.199:8080/')], contextPath: 'web', war: '**/*.war'
      }
     }
   }
 }
}